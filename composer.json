{
    "name": "dropfort/drupal_template",
    "description": "A Drupal project with the base configuration to build with Dropfort.",
    "type": "project",
    "keywords": [
        "Drupal",
        "Dropfort"
    ],
    "license": "GPL-2.0-or-later",
    "homepage": "https://git.dropfort.com/dropfort/drupal-templates/dropfort_drupal_template",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Coldfront Labs Inc.",
            "role": "Developer"
        }
    ],
    "repositories": {
        "composer": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "require": {
        "php": "^8.1",
        "composer/composer": "^2.0",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/config_split": "^1.7",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-recommended": "^9",
        "drupal/raven": "^2.3",
        "drush/drush": "^10.3",
        "drupal/entity": "^1.2",
        "oomphinc/composer-installers-extender": "^2.0",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "dropfort/dropfort_build": "^5@RC"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true,
        "github-protocols": [
            "https"
        ],
        "optimize-autoloader": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": [
            "load.environment.php"
        ]
    },
    "scripts": {
        "test:acceptance": [
            "bin/codecept run acceptance -c testing/codeception/codeception.yml --steps --tap --xml --html --env $DF_ENV_TYPE $DF_VALIDATE_ARGS"
        ],
        "test:phpcompatibility": [
            "bin/phpcs  --ignore=$PHPCS_IGNORE --extensions=$PHPCS_EXTENSIONS --standard=PHPCompatibility -p --runtime-set testVersion 7.3- ./"
        ],
        "test:drupal-deprecations": [
            "bin/drupal-check -d web/modules/custom",
            "bin/drupal-check -d web/themes/custom"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "gitignore": false,
            "allowed-packages": [
                "dropfort/dropfort_build"
            ],
            "file-mapping": {
                "[project-root]/.gitattributes": false
            },
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            },
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "drush/Commands/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true,
        "patches": {}
    }
}
